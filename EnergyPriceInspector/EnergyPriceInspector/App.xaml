<?xml version="1.0" encoding="utf-8" ?>
<Application xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:conv="clr-namespace:EnergyPriceInspector.Converters"
             x:Class="EnergyPriceInspector.App">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary>
                    <conv:ColorStyleToBackgroundColorConverter x:Key="ColorStyleToBackgroundColorConverter" />
                    <conv:ColorStyleToTitleConverter x:Key="ColorStyleToTitleConverter" />
                </ResourceDictionary>
                <ResourceDictionary Source="Styles/Colors.xaml" />
                <ResourceDictionary Source="Styles/Theme.xaml" />
                <ResourceDictionary Source="Styles/Labels.xaml" />
                <ResourceDictionary Source="Styles/Buttons.xaml" />
                <ResourceDictionary Source="Styles/DashboardWidget.xaml" />
                <ResourceDictionary Source="Styles/PriceChart.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>